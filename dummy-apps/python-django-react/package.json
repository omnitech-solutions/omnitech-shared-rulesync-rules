{
  "name": "python-django-react",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "concurrently --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,green\" \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
    "setup:backend": "cd backend && python -m venv venv && source venv/bin/activate && pip install -r requirements.txt && python manage.py migrate",
    "setup:frontend": "cd frontend && pnpm install",
    "dev:backend": "cd backend && source venv/bin/activate && python manage.py runserver 8000",
    "dev:frontend": "cd frontend && pnpm dev"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "turbo": "latest",
    "concurrently": "^8.2.2"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
